<% if session[:evergreen_connection] %>
	<% stat = session[:evergreen_connection].get_holdings document['eg_tcn_t'], org_unit: 8, descendants: true %>
	<% if stat.copies.size > 0 %>
		<% stat.libraries[7][:copies].each do |copy| %>
			<% if 'Available' == copy.status %>
				<%= content_tag :span, fa_icon('graduation-cap') + t('blacklight.available'), class: 'label label-success' %>
				<%= t('blacklight.access.available.lbcc') + ': ' + copy.call_number %>
				<% break %>
			<% end %>
		<% end %>
		<% stat.libraries[9][:copies].each do |copy| %>
			<% if 'Available' == copy.status %>
				<%= content_tag :span, fa_icon('stethoscope') + t('blacklight.available'), class: 'label label-success' %>
				<%= t('blacklight.access.available.hoc') + copy.call_number %>
				<% break %>
			<% end %>
		<% end %>

	<% end %>
<% end %>
