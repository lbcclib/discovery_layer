<% if session[:evergreen_connection] %>
	<% stat = session[:evergreen_connection].get_holdings document['eg_tcn_t'], org_unit: 8, descendants: true %>
	<% if stat.copies and stat.copies.size > 0 %>
		<% stat.libraries[7][:copies].each do |copy| %>
			<% if 'Available' == copy.status %>
				<%= render 'catalog/available_lbcc', call_number: copy.call_number %>
				<% break %>
			<% end %>
		<% end %>
		<% stat.libraries[9][:copies].each do |copy| %>
			<% if 'Available' == copy.status %>
				<%= render 'catalog/available_hoc', call_number: copy.call_number %>
				<% break %>
			<% end %>
		<% end %>

	<% end %>
<% end %>
