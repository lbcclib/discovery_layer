<% if has_search_parameters? %>
  <% if show_articles? %>
    <%= render 'did_you_mean' %>
    <% current_page = params[:page].present? ? Integer(params[:page]) : 1 %>
    <% article_results = ArticleSearch.new params[:q], params[:search_field], current_page, params[:f], session[:article_api_connection] %>
    <% article_results.send_search %>
  <% end %>

  <% if show_all_formats? %>
    <%= render 'did_you_mean' %>
    <div id="article-container" class="col-md-5 col-sm-9">
      <h2><%= t('blacklight.articles_label') %></h2>
      <i><%= t('blacklight.articles_description') %></i><br />
      <%= link_to t('blacklight.more_article_results'), url_for(params.merge(show_articles: 'only')), class: 'btn btn-default btn-lg' %>
      <div class="articles">
        <%= render partial: 'articles/search_results', locals: {:@articles => article_results.articles} %>
      </div>
      <%= link_to t('blacklight.more_article_results'), url_for(params.merge(show_articles: 'only')), class: 'btn btn-default btn-lg' %>
    </div>
    <div id="not-article-container" class="col-md-5 col-sm-9 col-md-offset-1">
      <h2><%= t('blacklight.solr_results_label') %></h2>
      <i><%= t('blacklight.solr_results_description') %></i><br />
      <%= link_to t('blacklight.more_solr_results'), url_for(params.merge(show_articles: 'false')), class: 'btn btn-default btn-lg' %>
        <%- if @response.empty? %>
          <%= render "zero_results" %>
        <%- elsif render_grouped_response? %>
          <%= render_grouped_document_index %>
        <%- else %>
          <%= render_document_index %>
        <%- end %>
      <%= link_to t('blacklight.more_solr_results'), url_for(params.merge(show_articles: 'false')), class: 'btn btn-default btn-lg' %>
    </div>

  <% elsif show_only_articles? %> 
    <div class="articles">
      <div id="sidebar" class="col-md-3 col-sm-4"><div id="facets" class="facets sidenav"><%= render partial: 'articles/facets', locals: {:@facets => article_results.facets} %></div></div>
      <div id="content" class="col-md-7 col-sm-8">
        <%= render partial: 'catalog/constraints' %>
        <%= render partial: 'catalog/paginate_compact', object: article_results.articles %>
        <%= render partial: 'articles/search_results', locals: {:@articles => article_results.articles} %>
        <%= render partial: 'catalog/results_pagination', locals: {:@response => article_results.articles} %>
      </div>
    </div>
    

  <% else %>
    <div id="sidebar" class="col-md-3 col-sm-4">
      <%= render 'search_sidebar' %>
    </div>

    <div id="content" class="col-md-7 col-sm-8">
      <%= render 'search_results' %>
    </div>
  <% end %>

<% else #show home page if no search params %>
  <div id="content">
    <%= render 'home' %>
  </div>
<% end %>
