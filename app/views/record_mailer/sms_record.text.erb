<% @documents.each do |document| %>
<%= document.to_sms_text %>
<%= t('blacklight.sms.text.url', :url => polymorphic_url(document, @url_gen_params) ) %>
<% if document['eg_tcn_t'] != nil %>
<%= t('blacklightsms.text.bookmessage', :bookmessage => @bookmessage ) -%>
<%= document['eg_tcn_t'].first -%>
<%= t('blacklight.sms.text.urlend', :urlend => @urlend ) %>
<% elsif document['url_fulltext_display'] %>
<%= t('blacklight.sms.text.urlmessage', :urlmessage => @urlmessage ) -%>
<%= document['url_fulltext_display'].first %>
<% else %>
<% t('blacklight.askalibrarian') %>
<% end %>
<% end %>
